<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="2.5"
	client="site"
	method="upgrade">
	<name>JT Quick Contact Form</name>
	<author>JTemplate.ru</author>
	<creationDate>06/01/2013</creationDate>
	<copyright>Copyright (C) 2011-2013 Jtemplate.ru. All Rights Reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>jtemplateru@yandex.ru</authorEmail>
	<authoralt>http://www.jtemplate.ru</authoralt>
	<version>1.0</version>
	<description>The module displays a quick contact form. (jQuery)</description>
	<files>	
		<filename module="mod_jt_quick_contact_form">mod_jt_quick_contact_form.php</filename>
		<filename>index.html</filename>
		<filename>mod_jt_quick_contact_form.php</filename>
		<filename>mod_jt_quick_contact_form.xml</filename>
		<folder>images</folder>
		<folder>css</folder>
		<folder>tmpl</folder>	
		<folder>js</folder>
		<folder>admin</folder>	       
    </files>
	
	<languages>	
		<language tag="en-GB">en-GB.mod_jt_quick_contact_form.ini</language>
		<language tag="en-GB">en-GB.mod_jt_quick_contact_form.sys.ini</language>
		<language tag="ru-RU">ru-RU.mod_jt_quick_contact_form.ini</language>
		<language tag="ru-RU">ru-RU.mod_jt_quick_contact_form.sys.ini</language>	
	</languages>
		
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/modules/mod_jt_quick_contact_form/admin/elements">
			
				<field type="asset" path="modules/mod_jt_quick_contact_form/admin/" />
				
				<field 
					name="jt_id" 
					type="text" 
					default="id" 
					label="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_ID_LABEL" 
					description="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_ID_DESC"/>
				
				
				<field
					name="jt_load_scripts"
					type="list"
					default="1"
					label="MOD_JT_QUICK_CONTACT_FORM_FIELD_LOAD_SCRIPTS_LABEL"
					description="MOD_JT_QUICK_CONTACT_FORM_FIELD_LOAD_SCRIPTS_DESC" >
					<option value="0">addScript</option>
					<option value="1">addCustomTag</option>
					<option value="2">addBody</option>
					<option value="3">No load all scripts</option>
				</field>
				
				
				<field
					name="jt_load_jquery"
					type="radio"
					default="1"
					class="btn-group"
					label="MOD_JT_QUICK_CONTACT_FORM_FIELD_LOAD_JQ_LABEL"
					description="MOD_JT_QUICK_CONTACT_FORM_FIELD_LOAD_JQ_DESC" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
				<field
					name="jt_jquery_ver"
					type="text"
					default="1.8.3"
					label="MOD_JT_QUICK_CONTACT_FORM_FIELD_JQUERYVER_LABEL"
					description="MOD_JT_QUICK_CONTACT_FORM_FIELD_JQUERYVER_DESC" />
						
				<field
					name="jt_load_validate"
					type="radio"
					default="1"
					class="btn-group"
					label="MOD_JT_QUICK_CONTACT_FORM_FIELD_LOAD_VALIDATE_LABEL"
					description="MOD_JT_QUICK_CONTACT_FORM_FIELD_LOAD_VALIDATE_DESC" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
				<field
					name="jt_my_email"
					type="textarea"
					filter="raw"
					default="your@email.com"
					label="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_MY_EMAIL_LABEL"
					description="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_MY_EMAIL_DESC" />
					
				<field
					name="jt_send_label"
					type="text"
					default="Send"
					label="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_FIELD_SEND_LABEL_LABEL"
					description="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_NAME_LABEL_DESC" />
					
				
				<field type="spacer" label="REQUIRED_FIELDS_SPACER" />
				
				<field
					name="jt_name_label"
					type="text"
					default="Name:"
					label="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_FIELD_NAME_LABEL_LABEL"
					description="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_NAME_LABEL_DESC" />
				
				<field
					name="jt_email_label"
					type="text"
					default="e-mail:"
					label="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_FIELD_EMAIL_LABEL_LABEL"
					description="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_NAME_LABEL_DESC" />
				
				<field
					name="jt_subject_label"
					type="text"
					default="Subject:"
					label="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_FIELD_SUBJECT_LABEL_LABEL"
					description="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_NAME_LABEL_DESC" />
				
				<field
					name="jt_message_label"
					type="text"
					default="Message:"
					label="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_FIELD_MESSAGE_LABEL_LABEL"
					description="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_NAME_LABEL_DESC" />
				
				
				<!-- <field type="spacer" label="ADDITIONAL_FIELDS_SPACER" />	 -->
				<!-- <field
					name="jt_name_label"
					type="text"
					default="Name:"
					label="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_NAME_LABEL_LABEL"
					description="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_NAME_LABEL_DESC" /> -->
			
				
				<field type="spacer" label="MESSAGES_SPACER" />	
				
				<field
					name="jt_send_message"
					type="textarea"
					filter="raw"
					rows="2" 
					cols="40"
					default="Thank you, your message has been sent!"
					label="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_SEND_MESSAGE_LABEL"
					description="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_SEND_MESSAGE_DESC" />
				<field
					name="jt_error_email"
					type="textarea"
					filter="raw"
					rows="2" 
					cols="40"
					default="You have entered incorrect email. Please fix it!"
					label="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_ERROR_EMAIL_LABEL"
					description="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_ERROR_EMAIL_DESC" />
				
				<field
					name="jt_error_field"
					type="textarea"
					filter="raw"
					rows="2" 
					cols="40"
					default="Please fill in all fields!"
					label="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_ERROR_FIELD_LABEL"
					description="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_ERROR_FIELD_DESC" />
				
				<field
					name="jt_script_required"
					type="textarea"
					filter="raw"
					rows="2" 
					cols="40"
					default="This field is required."
					label="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_SCRIPT_REQUIRED_LABEL"
					description="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_SCRIPT_REQUIRED_DESC" />
				
				<field
					name="jt_script_email"
					type="textarea"
					filter="raw"
					rows="2" 
					cols="40"
					default="Incorrect email."
					label="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_SCRIPT_EMAIL_LABEL"
					description="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_SCRIPT_EMAIL_DESC" />
				<field
					name="jt_script_minlength"
					type="textarea"
					filter="raw"
					rows="2" 
					cols="40"
					default="The minimum length"
					label="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_SCRIPT_MINLENGTH_LABEL"
					description="MOD_JT_QUICK_CONTACT_FORM_FIELD_JT_SCRIPT_MINLENGTH_DESC" />
				
			</fieldset>
			
			<fieldset
				name="advanced" 
				addfieldpath="/modules/mod_jt_quick_contact_form/admin/elements">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
					
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="0"
					class="btn-group"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
